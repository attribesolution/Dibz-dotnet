@model DIBZ.Common.Model.Admin

@{
    ViewBag.Title = "LogIn";
    Layout = null;
}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->

<head>
    <meta charset="utf-8" />
    <title>DIBZ</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <link rel="shortcut icon" type="image/icon" href="~/Areas/Content/assets/img/dibz-favicon.ico" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link href="@Url.Content("~/Areas/Content/assets/plugins/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Areas/Content/assets/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Areas/Content/assets/css/style.min.css")" rel="stylesheet" />
    <!-- ================== END BASE CSS STYLE ================== -->

</head>
<body class="gray-bg">

    <!-- Banner Slider START HERE -->
    <div class="section-container">
        <!-- BEGIN container -->
        <div class="container">
            <!-- BEGIN row -->
            <div class="row row-space-30">
                <!-- BEGIN col-8 -->
                <div class="col-md-5 m-tp-20 bg-white p-35 col-md-offset-3">
                    <div class="content">
                        <!-- BEGIN LOGIN FORM -->
                        <form id="form" class="login-form" action="@Url.Action("Login")" method="post">
                            <h3 class="form-title text-center m-b-15"><b>LOG IN</b></h3>
                            <div class="alert alert-danger display-hide" style="display:none;">
                                <button class="close" data-close="alert"></button>
                                <span>
                                    Enter any username and password.
                                </span>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="alert alert-danger" id="lblMessage" style="display:none;">

                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                                <label class="control-label visible-ie8 visible-ie9">Username</label>
                                @Html.TextBoxFor(m => Model.Email, new { @id = "email", @maxlength = "60", @class = "form-control", @placeholder = "Email", required = "required", type = "email" })


                                @*<input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" />*@
                            </div>
                            <div class="form-group">
                                <label class="control-label visible-ie8 visible-ie9">Password</label>
                                @Html.PasswordFor(m => Model.Password, new { @id = "password", @maxlength = "60", @class = "form-control", @placeholder = "Password", required = "required" })


                                @*<input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" />*@
                            </div>
                            <div class="form-actions">
                                <button type="submit" id="btnLogin" data-toggle="modal" data-target=".login-modal" class="btn btn-danger btn-block uppercase">Login</button>

                            </div>

                        </form>
                        <!-- END LOGIN FORM -->

                    </div>
                </div>
                <!-- END row -->
            </div>
            <!-- END container -->
        </div>

        <!-- Banner Slider END HERE -->

    </div>

    <!-- ================== BEGIN BASE JS ================== -->
    <script src="@Url.Content("~/Areas/Content/assets/plugins/jquery/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/Areas/Content/assets/plugins/bootstrap/js/bootstrap.min.js")"></script>

    <!-- ================== END BASE JS ================== -->

    <script src="@Url.Content("~/Areas/Content/assets/js/jquery.validate.min.js")"></script>


    <script>
        $(document).ready(function () {
            $('#form').validate();
        });
    </script>

</body>

</html>

