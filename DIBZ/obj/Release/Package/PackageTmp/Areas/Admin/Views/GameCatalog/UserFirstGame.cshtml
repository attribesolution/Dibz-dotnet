@model List<DIBZ.Logic.GameCatalog.GameData>

@{
    ViewBag.Title = "UserFirstGame";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section CustomScripts{

    <script>
        $(function () {
            $('.table').DataTable({
                "scrollX": true,
                "paging": true,
                "ordering": true,
                "info": true,
                "lengthChange": true,
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false,
                    "order": []
                }]
            });
        });

        $(function () {
            if ($(".nav a").hasClass("active")) {
                $(".nav a").removeClass("active");

            }
            $(".nav #menu8").addClass("active");
        });

        //hide DataTable info when no data in Table
        $(function () {
            if ($('.dataTables_empty').length > 0) {
                $('#DataTables_Table_0_info').css("display", "none");
                $('.dataTables_empty').css("display", "none");
            }
        })
    </script>
}

<div id="page-header" class="section-container page-header-container bg-black">
    <!-- BEGIN page-header-cover -->
    <div class="page-header-cover">
        <img src="~/Content/assets/img/top-cover.jpg" />
    </div>
    <!-- END page-header-cover -->
    <!-- BEGIN container -->
    <div class="container">
        <h1 class="page-header text-left pull-left"><b>LIST OF </b> Users First Game</h1>
    </div>
    <!-- END container -->
</div>

<!-- Grid START HERE -->
<div class="section-container bg-white border-bottom-1">
    <!-- BEGIN container -->
    <!-- BEGIN row -->
    <!-- BEGIN col-8 -->
    <div class="col-md-12">
        <div class="checkout-body p-0">
            <div class="table-responsive">
                <table class="table table-cart">
                    <thead>
                        <tr>
                            <th width="20%">Name</th>
                            <th width="40%">Game</th>
                            <th width="20%">Category</th>
                            <th width="20%">Format</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                if (item.GameName != null)
                                {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td>@item.GameName</td>
                                        <td>@item.Category</td>
                                        <td>@item.Format</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- END col-8 -->
        </div>
        <!-- END row -->
    </div>
    <!-- END container -->
</div>
<!-- Grid END HERE -->
