
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section CustomScripts{

    <script>
        $(function () {
            $('#lblMessage').text('');
            $('#lblMessage').hide();

            // Shoaib Code
            ajaxCall('@Url.Action("GetStatsCount", "UsersStats")', {}, function (resp) {

                if (resp.IsSuccess === true) {
                    $('#registusr1').text(' ' + resp.todayReg);
                    $('#registusr2').text(' ' + resp.sevenDayReg);
                    $('#registusr3').text(' ' + resp.fourWeekReg);
                    $('#registusr4').text(' ' + resp.sixMonthReg);
                    $('#registusr5').text(' ' + resp.yearReg);
                    $('#loginusr1').text(' ' + resp.todayLogin);
                    $('#loginusr2').text(' ' + resp.sevenDayLogin);
                    $('#loginusr3').text(' ' + resp.fourWeekLogin);
                    $('#loginusr4').text(' ' + resp.sixMonthLogin);
                    $('#loginusr5').text(' ' + resp.yearLogin);
                    $('#games1').text(' ' + resp.ps4Games);
                    $('#games2').text(' ' + resp.xb1Games);
                    $('#games3').text(' ' + resp.nswGames);
                    $('#games4').text(' ' + resp.ndsGames);
                    return true;
                }
                else {
                    $('#registusr1').text('');
                    $('#registusr2').text('');
                    $('#registusr3').text('');
                    $('#registusr4').text('');
                    $('#registusr5').text('');
                    $('#loginusr1').text('');
                    $('#loginusr2').text('');
                    $('#loginusr3').text('');
                    $('#loginusr4').text('');
                    $('#loginusr5').text('');
                    $('#games1').text('');
                    $('#games2').text('');
                    $('#games3').text('');
                    $('#games4').text('');
                }

            }, function (fail) {

                //alert(resp.fail);
                return false;
            }, function (err) {

                //alert(err);
                return false;
            });
        });

        $(function () {
            $('.table').DataTable({
                "scrollX": true,
                "paging": true,
                "ordering": false,
                "info": true,
                "lengthChange": true,
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false,
                    "order": []
                }]
            });
        });

        $(function () {
            if ($(".nav a").hasClass("active")) {
                $(".nav a").removeClass("active");

            }
            $(".nav #menu9").addClass("active");
        });

        //hide DataTable info when no data in Table
        $(function () {
            if ($('.dataTables_empty').length > 0) {
                $('#DataTables_Table_0_info').css("display", "none");
                $('.dataTables_empty').css("display", "none");
            }
        })

    </script>

}

