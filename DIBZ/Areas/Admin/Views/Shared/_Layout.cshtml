                    $('#loginusr').text('');
                }

            }, function (fail) {

                //alert(resp.fail);
                return false;
            }, function (err) {

                //alert(err);
                return false;
            });
        });
        function readURL(input, imageSet) {
            $('#lblMessage').text('');
            $('#lblMessage').hide();
            var ext = $(input).val().split('.').pop().toLowerCase();
            if ($.inArray(ext, ['gif', 'png', 'jpg', 'jpeg']) == -1) {
                $.jGrowl('Invalid file format.Please select an image.', true)
                $('#fileUploader').val(null);
            }
            else {
                debugger;
                if (input.files && input.files[0]) {
                    var fileSize = input.files[0];
                    var sizeInMb = fileSize.size / 1024;
                    var sizeLimit = 1024 * 2;
                    if (sizeInMb > sizeLimit) {
                        $('#lblMessage').text("File size must be with in 2 MB.");
                        $('#lblMessage').show();
                        $('#fileUploader').val(null);

                    }
                    else {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $(imageSet).attr('src', e.target.result);
                        }
                        reader.readAsDataURL(input.files[0]);
                    }

                }
            }
        }

        function showLoading() {
            $(".loader_bg").show();
            $('body').css('overflow', 'hidden');
        }

        function hideLoading() {
            $(".loader_bg").hide();
            $('body').css('overflow', 'auto');
        }

    </script>
