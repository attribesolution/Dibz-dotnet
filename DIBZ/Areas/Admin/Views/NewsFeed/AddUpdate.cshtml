@model DIBZ.Common.Model.NewsFeed
@{
    ViewBag.Title = "AddUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section CustomScripts{

    <script>
        $(function () {
            if ($(".nav a").hasClass("active")) {
                $(".nav a").removeClass("active");

            }
            $(".nav #menu5").addClass("active");
        });
    </script>
}

<div id="page-header" class="section-container page-header-container bg-black">
    <!-- BEGIN page-header-cover -->
    <div class="page-header-cover">
        <img src="@Url.Content("~/Areas/Content/assets/img/top-cover.jpg")" alt="">
    </div>
    <!-- END page-header-cover -->
    <!-- BEGIN container -->
    <div class="container">
        <h1 class="page-header text-left pull-left"><b>@(Model.Id > 0 ? "EDIT" : "ADD")</b> News Feed</h1>
    </div>
    <!-- END container -->
</div>




<!-- Banner Slider START HERE -->
<div class="section-container bg-white border-bottom-1">
    <!-- BEGIN container -->
    <div class="container">
        <!-- BEGIN row -->
        <div class="row row-space-30">
            <!-- BEGIN col-8 -->
            <div class="col-md-12">
                <form action="@Url.Action("AddUpdateNewsFeed")" method="POST" id="form">
                    <input type="hidden" name="Id" value="@Model.Id">
                    <div class="col-md-6 m-b-20 mh-35">
                        <label class="control-label col-md-4 text-left p-b-10  p-l-0 p-r-0">News Feed <span class="text-danger">*</span></label>
                        <div class="col-md-8 p-l-0 p-r-0">

                            @*<input type="text" class="form-control" name="news" value="@Model.News" placeholder="Title" required>*@
                            <textarea class="form-control"  placeholder="Please enter news feed" name="news" rows="5" maxlength="60"  required>@Model.News</textarea>
                        </div>
                    </div>
                    
                    <div class="col-md-12 m-b-20 mh-35">
                        <label class="control-label col-md-4 text-left p-b-10  p-l-0 p-r-0">&nbsp;</label>
                        <div class="col-md-8 p-l-0 p-r-0">
                            <button type="submit" class="btn btn-danger btn-md pull-right">@(Model.Id > 0 ? "UPDATE" : "ADD")</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- END row -->
        </div>
        <!-- END container -->
    </div>
</div>
