            $('#editAboutMe').val($("#lblAboutMe").text());
            $('#editMobile').val($("#lblCellNo").text());
            $('#editBirthYear').val($("#lblBirthYear").text()).trigger('change');
            $('#editPostalCode').val($('#lblPostalCode').text());
