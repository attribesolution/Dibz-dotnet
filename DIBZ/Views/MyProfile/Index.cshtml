        function ShowProfileData() {
            @*console.log('@Model.NickName');*@
            $('#editFirstName').val($("#lblFirstName").text());
            $('#editLastName').val($("#lblLastName").text());
            $('#editNickName').val($("#lblNickName").text());
            $('#editAddress').val($("#lblAddress").text());
