                                </div>
                            </div>
                            <!-- Left Main Game END here -->
                            <!-- Mid Description START here -->
                            <div class="col-md-7">
                                <div>
                                    <h3 class="counter-desc-title m-t-0">Scorecard</h3>
                                    <div class="form-group p-t-10 p-b-5 m-b-0 p-l-0 p-r-0 border-bottom-1">
                                        
                                        
